---
import Layout from "../../layouts/Layout.astro";
import { projects } from "../../utils/projects_lists";

export function getStaticPaths () {
 return projects.map(project => ({params: {id:project.id}}));
}

const {id} = Astro.params

const project = projects.filter(pro => pro.id === id)[0]
---
<Layout title={`Project-${id}`}>
  <section class="w-full h-full overflow-y-auto overflow-x-hidden relative">
    <div class="absolute left-0 top-0 w-full h-1/2 overflow-hidden">
      <img class=" w-full h-full object-cover blur-sm brightness-75" src={project.img} alt={project.alt}>
      <span id="gradient"></span>
    </div>
    <div class="container w-full h-full flex flex-col items-center justify-evenly">
      
      <h2 class="text-5xl text-green-200 z-10 uppercase font-space-mono   ">{project.title}</h2>
      <p class="text-green-300 text-2xl md:w-3/4 mt-5 z-10">
        {project.descriptionExtended}
      </div>
    </p>  
  </section>
</Layout>

<style>
  span{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-body);
    background: linear-gradient(0deg, #04262c 10%, transparent 100%); 
  }
  body{
    background-color: #04262c;
  }
</style>