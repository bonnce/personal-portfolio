<style>
    :root{
        --teal-200:#6ee7b7;
        --teal-300:#10b981;
        --teal-400 :#0d9488;
    }
    strong {
            font-family: 'Space Mono';
            /* font-weight: 800; */
            /* letter-spacing: 1rem; */
            font-weight: 500;
            animation: flicker 10s linear 10s infinite alternate, pulsate 0.1s ease-in-out infinite alternate;
            text-shadow:
            0 0 8px var(--teal-200),
            0 0 12px var(--teal-200),
            0 0 19px var(--teal-200),
            0 0 40px var(--teal-300),
            0 0 50px var(--teal-300);
            /* 0 0 60px var(--teal-300), */
            /* 0 0 70px var(--teal-300), */
            /* 0 0 80px var(--teal-300); */
        }
    @keyframes flicker {
        
        0%, 14%, 16%, 20%, 22%, 24%, 54%, 56%, 100% {
    
            text-shadow:
            0 0 8px var(--teal-200),
            0 0 12px var(--teal-200),
            0 0 19px var(--teal-200),
            0 0 40px var(--teal-300),
            0 0 50px var(--teal-300);
            /* 0 0 60px var(--teal-300),
            0 0 70px var(--teal-300),
            0 0 80px var(--teal-300); */
            /* color: var(--teal-400); */
        
        }
        
        15%, 21%, 23%, 55% {        
            text-shadow: none;
            /* color: transparent; */
        }    
    }
    @keyframes pulsate {
        100% {
            /* Larger blur radius */
            text-shadow:
            0 0 8px var(--teal-200),
            0 0 12px var(--teal-200),
            0 0 19px var(--teal-200),
            0 0 40px var(--teal-300),
            0 0 50px var(--teal-300);
        }
        0% {
            /* A slightly smaller blur radius */
            text-shadow:
            0 0 8px var(--teal-200),
            0 0 11px var(--teal-200),
            0 0 17px var(--teal-200),
            0 0 38px var(--teal-300),
            0 0 45px var(--teal-300);
        }
        }
</style>