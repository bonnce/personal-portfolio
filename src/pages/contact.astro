---
import NeonTitle from "../components/NeonTitle.astro";
import Layout from "../layouts/Layout.astro";

---

<Layout title="Contact me" location="contact">
	<section class="md:w-3/4 p-5 flex flex-col justify-center items-center overflow-y-auto overflow-x-hidden font-vga">

		<NeonTitle className="text-5xl" title="Contact with me"/>
		<br>
		<h2 class="text-center text-green-300 text-2xl md:w-1/2">I appreciate your interest in reaching out to me. I'll get back to you as soon as possible so please feel free to leave me a</h3>
		<a href="mailto:eliasdavid9757@gmail.com?body=Hello David..." class="button relative text-teal-800 p-5 text-2xl m-5 font-bold border-b-4 border-lime-600 active:border-0 active:m-6 after:bg-green-300 before:bg-lime-200">Message here</a>
	</section>
</Layout>

<style>
	.button{
		transition: all .1s ease-in;
		overflow: none;
		background-color: transparent;
		cursor: pointer;
		user-select: none;
	}
	.button:hover::after{
	 width: 0;
	 border-right: 2px solid white;
	}
	.button::before, .button::after{
		position: absolute;
		top: 0;
		left: 0;
		content: '';
		width: 100%;
		height: 100%;
		transition: all .3s ease-in;
		z-index: -1;
	}
	@media (max-height: 450px) {
        section{
			justify-content: flex-start;
		}
    }
</style>