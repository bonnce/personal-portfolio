---
interface Props {
	selected:string;
}

const { selected } = Astro.props;
const locations = ['home','projects','experience','contact']
---
<nav class="p-5 w-min">
    <ul class="h-full text-green-500  text-5xl font-mda flex flex-col justify-around">
        {locations.map(loc=>(
            <li class={loc === selected ? 'text-teal-200':''}><a href={`/${loc !== 'home' ? loc : ''}`}>{loc}</a></li>
        ))}
        <ul>
            <li><a href="https://linkedin.com">linkedin</a></li>
            <li><a href="https://gmail.com">email</a></li>
            <li><a href="https://github.io">github</a></li>
            <li><a href="https://codepen.io">codepen</a></li>
        </ul>
    </ul>
</nav>

<style>
    li{
        transition: transform .2s cubic-bezier(.17,.67,.83,.67);
        text-transform: uppercase;
    }
    li:hover{
        transform: scale(1.1);
    }
    .selected{
        background-color: #336633;
        color: #111611;
        transform: scale(1.1);
    }
</style>