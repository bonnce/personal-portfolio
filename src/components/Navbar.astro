---
interface Props {
	selected:string;
}

const { selected } = Astro.props;
const locations = ['home','projects','experience','contact']
---
<nav class="p-5 w-min h-screen">
    <ul class="h-full text-green-500  text-5xl  flex flex-col justify-around">
        {locations.map(loc=>(
            <li class={loc === selected ? 'text-teal-200 selected':'hover:drop-shadow-neon'}>
                <a href={`/${loc !== 'home' ? loc : ''}`}>
                    {loc}
                </a></li>
        ))}
        <ul class="flex flex-wrap gap-5">
            <li class="w-full basis-1/3 aspect-square hover:drop-shadow-neon"><a href="https://linkedin.com"><img class="w-full" src="/assets/img/linkedin.svg" alt="linkedin"></a></li>
            <li class="w-full basis-1/3 aspect-square hover:drop-shadow-neon"><a href="https://gmail.com"><img class="w-full" src="/assets/img/gmail.svg" alt="gmail"></a></li>
            <li class="w-full basis-1/3 aspect-square hover:drop-shadow-neon"><a href="https://github.io"><img class="w-full" src="/assets/img/github.svg" alt="github"></a></li>
            <li class="w-full basis-1/3 aspect-square hover:drop-shadow-neon"><a href="https://codepen.io"><img class="w-full" src="/assets/img/codepen.svg" alt="codepen"></a></li>
        </ul>
    </ul>
</nav>

<style>
    li{
        transition: all .2s cubic-bezier(.17,.67,.83,.67);
        text-transform: uppercase;
        font-family: IBM_VGA;
    }
    li:hover{
        transform: scale(1.1);
    }
    .selected > a{
        cursor: default;
    }
    .selected:hover{
        transform: none;
        text-shadow: none;
    }
</style>